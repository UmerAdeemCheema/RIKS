<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/registerEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:layout_marginHorizontal="30sp"
                android:inputType="textEmailAddress"
                android:textSize="20sp"
                android:hint="Email Address"
                android:drawableRight="@drawable/ic_email"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/registerUName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:layout_marginHorizontal="30sp"
                android:inputType="text"
                android:textSize="20sp"
                android:hint="User Name"
                android:drawableRight="@drawable/ic_person"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/registerDName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:layout_marginHorizontal="30sp"
                android:inputType="text"
                android:textSize="20sp"
                android:hint="Full Name"
                android:drawableRight="@drawable/ic_person"/>



            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/registerCNIC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:layout_marginHorizontal="30sp"
                android:inputType="number"
                android:textSize="20sp"
                android:hint="CNIC"
                android:drawableRight="@drawable/ic_person"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/registerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:layout_marginHorizontal="30sp"
                android:inputType="text"
                android:textSize="20sp"
                android:hint="Address"
                android:drawableRight="@drawable/ic_house"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/registerContactNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:layout_marginHorizontal="30sp"
                android:inputType="number"
                android:textSize="20sp"
                android:hint="Contact No"
                android:drawableRight="@drawable/ic_phone"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/registerPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:layout_marginHorizontal="30sp"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:hint="Password"
                android:drawableRight="@drawable/ic_lock"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/registerCPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:layout_marginHorizontal="30sp"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:hint="ConfirmPassword"
                android:drawableRight="@drawable/ic_lock"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="User Type"
                android:layout_marginHorizontal="30dp"/>

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="30dp"
                android:id="@+id/registerRadio">
                <RadioButton
                    android:id="@+id/registerRadioC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer"
                    android:textSize="15dp"
                    android:onClick="onRadioButtonClicked"
                    android:layout_marginRight="20dp"/>
                <RadioButton
                    android:id="@+id/registerRadioE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employee"
                    android:textSize="15dp"
                    android:onClick="onRadioButtonClicked"
                    android:layout_marginRight="20dp"/>
                <RadioButton
                    android:id="@+id/registerRadioM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manager"
                    android:textSize="15dp"
                    android:onClick="onRadioButtonClicked"/>
            </RadioGroup>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/registerToken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:layout_marginHorizontal="30sp"
                android:inputType="text"
                android:textSize="20sp"
                android:hint="Token (If Any)"
                android:drawableRight="@drawable/ic_key"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="30sp"
                android:layout_marginVertical="10sp">
                <androidx.cardview.widget.CardView
                    android:layout_width="42sp"
                    android:layout_height="42sp"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="5dp"
                    android:elevation="12dp"
                    android:id="@+id/view2"
                    app:cardCornerRadius="120dp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:layout_gravity="center"
                    android:thicknessRatio="1.9">
                    <ImageView
                        android:id="@+id/registerProfile"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:src="@drawable/ic_profilepic"
                        android:minHeight="40sp"
                        android:maxHeight="40sp"
                        android:minWidth="40sp"
                        android:maxWidth="40sp"/>
                </androidx.cardview.widget.CardView>
                <Button
                    android:onClick="selectImage"
                    android:layout_width="230dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="Pick a Profile Picture"
                    android:layout_marginTop="5sp"
                    android:textSize="15sp"/>
                <ImageView
                    android:onClick="resetProfilePic"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@drawable/ic_cancel"
                    android:minHeight="40sp"
                    android:maxHeight="40sp"
                    android:minWidth="40sp"
                    android:maxWidth="40sp"
                    android:layout_marginHorizontal="5sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/registerBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30sp"
                android:onClick="register"
                android:text="Register"
                android:textSize="20sp"
                android:layout_marginVertical="20dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>