<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/managerClistitemImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_profilepic"
        android:layout_margin="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="10dp">
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/managerClistitemDName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20dp"/>

        <TextView
            android:layout_marginBottom="7dp"
            android:layout_marginVertical="7dp"
            android:id="@+id/managerClistitemEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20dp"/>
        <TextView
            android:layout_marginVertical="7dp"
            android:id="@+id/managerClistitemCNIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CNIC"
            android:textSize="20dp"/>
        <TextView
            android:layout_marginVertical="7dp"
            android:id="@+id/managerClistitemContactNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CNIC"
            android:textSize="20dp"/>
    </LinearLayout>
</LinearLayout>