<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profiletoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="PROFILE INFO"
        app:titleTextColor="@color/white"

        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:elevation="12dp"
                android:id="@+id/view2"
                app:cardCornerRadius="120dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:layout_gravity="center"
                android:thicknessRatio="1.9">
                <ImageView
                    android:id="@+id/mProfilePic"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/ic_profilepic"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"/>
                <TextView
                    android:id="@+id/mProfileName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"/>
                <ImageView
                    android:onClick="updateAttribute"
                    android:id="@+id/mProfileEName"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_edit"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_gravity="center|right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"/>
                <TextView
                    android:id="@+id/mProfileEmail"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"/>
                <ImageView
                    android:onClick="updateAttribute"
                    android:id="@+id/mProfileEEmail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_edit"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_gravity="center|right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CNIC"
                    android:textSize="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"/>
                <TextView
                    android:id="@+id/mProfileCNIC"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"/>
                <ImageView
                    android:onClick="updateAttribute"
                    android:id="@+id/mProfileECNIC"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_edit"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_gravity="center|right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"/>
                <TextView
                    android:id="@+id/mProfileAddress"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginLeft="20dp"/>
                <ImageView
                    android:onClick="updateAttribute"
                    android:id="@+id/mProfileEAddress"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_edit"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_gravity="center|right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact No"
                    android:textSize="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"/>
                <TextView
                    android:id="@+id/mProfileContactNo"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"
                    android:layout_marginVertical="10dp"/>
                <ImageView
                    android:onClick="updateAttribute"
                    android:id="@+id/mProfileEContactNo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_edit"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:layout_gravity="center|right"/>
            </LinearLayout>

            <Button
                android:id="@+id/mProfileEPass"
                android:onClick="updateAttribute"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Change Password"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:onClick="logout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Logout"
                    android:layout_margin="20dp"
                    android:textSize="15dp"/>
                <Button
                    android:onClick="deleteAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DELETE ACCOUNT"
                    android:layout_margin="20dp"
                    android:textSize="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</LinearLayout>